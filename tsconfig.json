{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "nodenext",
    "plugins": [
      {
        "name": "vite-plugin-iso-import"
      }
    ],
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./src/**/*.js",
    "./src/**/*.ts",
    "./src/**/*.svelte",
    "./test/**/*.ts",
  ],
  "ts-node": {
    "transpileOnly": true
  }
}